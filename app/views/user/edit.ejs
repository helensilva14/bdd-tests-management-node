<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>Editar conta - BDD-TM</title>
        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <!-- Bootstrap core CSS -->
        <link href="/css/bootstrap.min.css" rel="stylesheet">
        <!-- Material Design Bootstrap -->
        <link href="/css/mdb.min.css" rel="stylesheet">
        <!-- Your custom styles (optional) -->
        <link href="/css/style.min.css" rel="stylesheet">
        <!-- Custom styles for this template -->
        <link href="/css/custom/signin.css" rel="stylesheet">
    </head>

    <body class="text-center">
      <!-- Material form register -->
      <div class="card">
        <!--Heading-->
        <h5 class="card-header info-color white-text text-center py-4">
            <strong>Editar conta</strong>
        </h5>
        <!--Card content-->
        
        <% if(errors.length > 0) { %>
			<section class="alert alert-danger">
				<p>Atenção!</p>
				<ul>
					<% for(let i = 0; i < errors.length; i++){ %>
					<li>
						<%= errors[i].msg %>
					</li>
					<% } %>
				</ul>
			</section>
		<% } %>

        <div class="card-body pt-0 pb-0">
          <!-- Form -->
          <form class="text-left" style="color: #757575;" action="/user/edit" method="post">
  
            <div class="form-row">
              <div class="col">
                <!-- First name -->
                <br>
                <div class="form-group">
                  <label><strong>Nome</strong></label>
                  <input type="text" id="name" name="name" class="form-control" value="<%= user[0].name %>" required>
                </div>
              </div>
              <div class="col">
                <!-- Last name -->
                <br>
                <div class="form-group">
                  <label><strong>Sobrenome</strong></label>
                  <input type="text" id="lastname" name="lastname" class="form-control" value="<%= user[0].lastname %>" required>
                </div>
              </div>
            </div>
            
            <!-- E-mail -->
            <div class="form-group mt-0">
              <label><strong>E-mail</strong></label>
              <input type="email" id="email" name="email" class="form-control" value="<%= user[0].email %>" required>
            </div>

            <!-- Password -->
            <div class="form-group">
              <label><strong>Senha</strong></label>
              <input type="password" id="password" name="password" class="form-control" required minlength="8">
              <small class="form-text text-muted mb-4">Digite pelo menos 8 caracteres</small>
            </div>

            <!-- Confirm Password -->
            <div class="form-group">
              <label><strong>Confirmar Senha</strong></label>
              <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required minlength="8">
            </div>
            
            <div class="form-row">
              <div class="col">
                <a href="/" class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0">Voltar</a>
              </div>
              <div class="col">
                <input type="hidden" name="_method" value="PUT" />
                <button class="btn btn-outline-success btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit" name="submit">Salvar</button>
              </div>
            </div>
            
          </form>
          <!-- Form -->
          
           <form method="post" action="/user/delete">
               <div class="form-row">
                   <div class="col">
                       <button type="submit" class="btn btn-outline-danger btn-rounded btn-block my-4 waves-effect z-depth-0" name="delete"
                            onClick="return confirm('Você realmente deseja apagar sua conta?')">APAGAR MINHA CONTA</button>
                        <input type="hidden" name="_method" value="DELETE" />
                   </div>
               </div>
            </form>
          
        </div>
      </div>
      <!-- Material form register -->
    </body>
</html>